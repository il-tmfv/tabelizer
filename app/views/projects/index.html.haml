%table
  %thead
    %tr
      %th Статус
      %th Наименование
      %th Клиент
      %th Расположение 
      %th Занято человек
      %th Потрачено часов
      %th{colspan: 3} Команды
  %tbody
    - @projects.each do |p| 
      %tr
        %td= p.status.text
        %td= link_to p.title, project_path(p)
        %td= p.customer.title
        %td= p.location
        %td= p.users.size
        %td= p.spent_time
        - if !(p.users.include? current_user)
          %td= button_to "Присоединиться", assign_user_path(current_user.id, p.id), method: :post, class: "btn"
        %td= button_to "Редактировать", edit_project_path(p.id), method: :get, class: "btn btn-info" 
        %td= button_to "Удалить", project_path(p.id), method: :delete, class: "btn btn-danger" 
%div
  = button_to "Создать", new_project_path, method: :get, class: "btn btn-primary"

