%div{class: "container"}
  %div{class: "page-header"}
    %h1
      Проекты 
      %small= "Всего: #{@projects.size}"
  %div{class: "table-responsive"}
    %table{class: "table table-hover"}
      %thead
        %tr
          %th Статус
          %th Наименование
          %th Клиент
          %th Расположение 
          %th Занято человек
          %th Потрачено часов
      %tbody
        - @projects.each do |p| 
          %tr
            %td= p.status.text
            %td= link_to p.title, project_path(p)
            %td= p.customer.title
            %td= p.location
            %td= p.users.size
            %td= p.spent_time
    %div
      = button_to "Создать", new_project_path, method: :get, class: "btn btn-primary"

