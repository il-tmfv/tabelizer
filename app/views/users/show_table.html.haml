.container
  .page-header
    %h3 Табель сотрудника
  .responsive-table
    %table{class: "table table-hover"}
      %thead
        %tr
          %th= TableEntry.human_attribute_name(:date)
          %th Проект
          %th= TableEntry.human_attribute_name(:comment)
          %th= TableEntry.human_attribute_name(:duration)
      %tbody
        - @entries.each do |e|
          %tr
            %td= e.date
            %td= e.project.title
            %td= e.comment
            %td= e.duration
