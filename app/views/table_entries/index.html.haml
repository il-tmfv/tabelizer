.container
  .page-header
    %h3 Табель сотрудника
    %small= "Последние 60 записей"
  .responsive-table
    %table{class: "table table-hover"}
      %thead
        %tr
          %th= TableEntry.human_attribute_name(:date)
          %th Проект
          %th= TableEntry.human_attribute_name(:comment)
          %th= TableEntry.human_attribute_name(:duration)
          %th Удалить
      %tbody
        - @table_entries.each do |e|
          %tr
            %td= link_to e.date.strftime('%d.%m.%Y'), edit_table_entry_path(e)
            %td= e.project.title
            %td= e.comment
            %td= e.duration
            %td= button_to "X", table_entry_path(e), method: :delete, class: "btn btn-danger", data: { confirm: "Вы уверены?" }
