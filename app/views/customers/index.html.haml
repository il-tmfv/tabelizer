%div{class: "container"}
  %div{class: "table-responsive"}
    %table{class: "table table-hover"}
      %thead
        %tr
          %th Наименование
          %th Комментарий
      %tbody
        - @customers.each do |c| 
          %tr
            %td= link_to c.title, customer_path(c)
            %td= c.comment
    %div
      = button_to "Создать", new_customer_path, method: :get, class: "btn btn-primary"

