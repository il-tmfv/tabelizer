!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Tabelizer
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if user_signed_in?
      %div 
        %ul
          %li= link_to 'Заказчики', customers_path
          %li= link_to 'Проекты', projects_path
          %li= link_to 'Пользователи', users_path
          %li= "Здравствуйте, #{current_user.last_name} #{current_user.first_name}"
          %li= link_to 'Выйти', destroy_user_session_path, method: :delete
    = notice
    = alert
    = yield
